<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="daysViewModel"
            type="com.example.bugin_erten.DaysViewModel" />
        <variable
            name="newSize"
            type="Float" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DaysFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_increase"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&#11014;" />
                    <Button
                        android:id="@+id/btn_fontChange"
                        android:text="@{daysViewModel.titleFont}"
                        android:layout_width="100dp"
                        android:layout_height="40dp"/>
                    <Button
                        android:id="@+id/btn_decrease"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&#11015;"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_fontStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{daysViewModel.styleTitle}"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{daysViewModel.qaraSoz.qaraSozTitle}"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/main_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{daysViewModel.qaraSoz.qaraSozText}"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                   />

            </LinearLayout>
        </ScrollView>


    </FrameLayout>
</layout>