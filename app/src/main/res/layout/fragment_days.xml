<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="daysViewModel"
            type="com.example.bugin_erten.DaysViewModel" />
        <variable
            name="newSize"
            type="Float" />
    </data>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DaysFragment">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/line3"
            android:background="#859E9E98"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_white"
                android:layout_marginRight="10dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                app:cornerRadius="25dp"
                android:backgroundTint="#FFFFFF"
                />
            <Button
                android:id="@+id/btn_increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:text="+"
                android:backgroundTint="#505050"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_fontChange"
                android:text="@{daysViewModel.titleFont}"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#505050"/>
            <Button
                android:id="@+id/btn_decrease"
                android:layout_width="40dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="40dp"
                android:text="-"
                android:backgroundTint="#505050"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_gray"
                android:layout_marginLeft="10dp"
                android:insetBottom="0dp"

                android:insetTop="0dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                app:cornerRadius="25dp"
                android:backgroundTint="#C9DDCE9B"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{daysViewModel.property.title}"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp" />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:imageUrl="@{daysViewModel.property.imgSrcUrl}"/>
                <TextView
                    android:id="@+id/main_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{daysViewModel.property.text}"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                   />
            </LinearLayout>
        </ScrollView>


    </FrameLayout>
</layout>